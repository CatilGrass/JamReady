<Window x:Class="JamReadyGui.AppWindows.AppExplorer.Explorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        Width="200"
        Height="650"
        Style="{StaticResource ExplorerNavigationWindowStyle}"
        Title="Jam Ready Explorer"
        mc:Ignorable="d">
    
    <Grid Background="{DynamicResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/> <!-- 标题区 -->
            <RowDefinition Height="1"/> <!-- 分割线 -->
            <RowDefinition Height="*"/> <!-- 内容区 -->
        </Grid.RowDefinitions>
        
            <!-- 纵向0：标题区 -->
            <Grid Grid.Row="0" Background="{DynamicResource AppMainColor}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>
            
                <!-- 横向0：左侧工具栏 -->
                <StackPanel Grid.Column="0">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <StackPanel 
                            Orientation="Horizontal" 
                            VerticalAlignment="Stretch">
                        
                            <!-- 返回上一级按钮 -->
                            <Button 
                                Click="Explorer_BackToLast"
                                Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                Width="30" Height="30">
                                <Image Source="/AppResources/Assets/Icons/Light_64x/arrow_back.png"
                                       Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                       Width="20"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            
                <!-- 横向1：地址输入、窗口拖拽区域 -->
                <Grid
                    Grid.Column="1"
                    Background="{DynamicResource AppMainColor}">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 地址输入 -->
                    <TextBox
                        Name="PathBox" 
                        Grid.Column="0" Padding="3"
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                        Background="{DynamicResource AppMainColorDark}" BorderBrush="Transparent" BorderThickness="0"
                        CaretBrush="{DynamicResource AccentColor}" SelectionBrush="{DynamicResource AccentColor}"
                        FontSize="13" FontWeight="Regular" Foreground="{DynamicResource WidgetForegroundColor}"
                        TextWrapping="NoWrap" IsHitTestVisible="True"
                        PreviewKeyDown="PathBox_OnPreviewKeyDown"/>
                    
                    <!-- 拖拽区 -->
                    <Grid 
                        Column="1" 
                        Background="{DynamicResource AppMainColor}"
                        MouseMove="Explorer_DragWindow"> </Grid>
                    
                </Grid>
            
                <!-- 横向2：窗口操作区域 -->
                <StackPanel Grid.Column="2" VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel
                            Grid.Column="1"
                            Orientation="Horizontal" 
                            VerticalAlignment="Stretch">
                        
                            <!-- 最小化按钮 -->
                            <Button 
                                Click="Explorer_Minimize"
                                Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                Width="30" Height="30">
                                <Image Source="/AppResources/Assets/Icons/Light_64x/minimize.png"
                                       Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                       Width="20"/>
                            </Button>
                        
                            <!-- 切换最大化、窗口化按钮 -->
                            <Button 
                                Click="Explorer_MaximizeRestore"
                                Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                Width="30" Height="30">
                                <Image Source="/AppResources/Assets/Icons/Light_64x/open_in_full.png"
                                       Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                       Width="20"/>
                            </Button>
                        
                            <!-- 关闭窗口按钮 -->
                            <Button 
                                Click="Explorer_Close"
                                Style="{StaticResource JamReadyButtonStyleCloseButton}"
                                Width="30" Height="30">
                                <Image Source="/AppResources/Assets/Icons/Light_64x/close.png"
                                       Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                       Width="20"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
            
            <!-- 纵向1：分割线 -->
            <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{DynamicResource AppMainColorDark}"/>
            
            <!-- 纵向2：内容区 -->
            <Grid Grid.Row="2">
                <Grid>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/> <!-- 顶部工具栏 -->
                        <RowDefinition Height="1"/> <!-- 分割线 -->
                        <RowDefinition Height="*"/> <!-- 内容区 -->
                    </Grid.RowDefinitions>
                    
                    <!-- 纵向0：工具栏 -->
                    <Grid 
                        Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                        Background="{DynamicResource AppMainColor}">
            
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/> <!-- 左侧工具 -->
                            <ColumnDefinition Width="*"/> <!-- 搜索栏 -->
                            <ColumnDefinition Width="120"/> <!-- 右侧工具 -->
                        </Grid.ColumnDefinitions>
            
                        <!-- 横向0：左侧工具 -->
                        <Grid Grid.Column="0">
                        
                            <!-- 搜索按钮 -->
                            <Button 
                                Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                Width="30" Height="30">
                                <Image Source="/AppResources/Assets/Icons/Light_64x/search.png"
                                       Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                       Width="20"/>
                            </Button>
                            
                        </Grid>
            
                        <!-- 横向1：搜索栏 -->
                        <Grid Grid.Column="1">
                            
                            <!-- 搜索栏 -->
                            <Grid
                                Grid.Column="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                        
                                <!-- 搜索输入框 -->
                                <TextBox
                                    Name="SearchBox" 
                                    Grid.Column="0" Padding="3"
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                                    Background="Transparent" BorderBrush="Transparent" BorderThickness="0"
                                    CaretBrush="{DynamicResource AccentColor}" SelectionBrush="{DynamicResource AccentColor}"
                                    FontSize="13" FontWeight="Regular" Foreground="{DynamicResource WidgetForegroundColor}"
                                    TextWrapping="NoWrap"
                                    PreviewKeyDown="SearchBox_OnPreviewKeyDown"/>
                        
                            </Grid>
                            
                        </Grid>
            
                        <!-- 横向2：右侧工具 -->
                        <Grid Grid.Column="2">
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    
                                <!-- 右侧工具 -->
                                <StackPanel 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Stretch">
                        
                                    <!-- 放大视图按钮 -->
                                    <Button 
                                        Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                        Width="30" Height="30"
                                        Click="Explorer_Zoom_In">
                                        <Image Source="/AppResources/Assets/Icons/Light_64x/expand_content.png"
                                               Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                               Width="20"/>
                                    </Button>
                        
                                    <!-- 缩小视图按钮 -->
                                    <Button 
                                        Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                        Width="30" Height="30"
                                        Click="Explorer_Zoom_Out">
                                        <Image Source="/AppResources/Assets/Icons/Light_64x/collapse_content.png"
                                               Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                               Width="20"/>
                                    </Button>
                        
                                    <!-- 刷新列表按钮 -->
                                    <Button 
                                        Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                        Width="30" Height="30"
                                        Click="Explorer_Refresh">
                                        <Image Source="/AppResources/Assets/Icons/Light_64x/refresh.png"
                                               Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                               Width="20"/>
                                    </Button>
                        
                                    <!-- 标记位置按钮 -->
                                    <Button 
                                        Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                        Width="30" Height="30">
                                        <Image Source="/AppResources/Assets/Icons/Light_64x/keep.png"
                                               Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                               Width="20"/>
                                    </Button>
                        
                                </StackPanel>
                    
                            </Grid>
                
                        </Grid>
            
                    </Grid>
                    
                    <!-- 纵向1：分割线 -->
                    <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{DynamicResource AppMainColorDark}"/>
                    
                    <!-- 纵向2：内容区 -->
                    <ScrollViewer
                        Grid.Row="2"
                        VerticalScrollBarVisibility="Hidden"
                        HorizontalScrollBarVisibility="Disabled">
            
                        <ScrollViewer.InputBindings>
                
                            <!-- 滚动区右键事件，用于呼出 PathMenu -->
                            <MouseBinding Gesture="RightClick" 
                                          Command="{Binding DataContext.ExplorerPathRightClickCommand, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                                          CommandParameter="{Binding}"/>
                        </ScrollViewer.InputBindings>
            
                        <!-- 浏览器列表布局 -->
                        <ItemsControl 
                            Name="ExplorerItemsControl"
                            ScrollViewer.CanContentScroll="True"
                            ItemsSource="{Binding ExplorerItems}" 
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Margin="8">
        
                            <!-- 列表项容器模板 -->
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel
                                        Orientation="Vertical" 
                                        IsItemsHost="True"
                                        HorizontalAlignment="Stretch"
                                        SizeChanged="ExplorerItemPanel_OnSizeChanged"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
        
                            <!-- 列表项容器样式 -->
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <EventSetter Event="Drop" Handler="Item_OnDrop"/>
                                    <Setter Property="AllowDrop" Value="True"/>
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="Height" Value="{Binding DataContext.ExplorerItemSize, RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                                    <Setter Property="Margin" Value="0"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
        
                            <!-- 列表项模板 -->
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding DataContext.ExplorerItemSize, RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                            
                                        <!-- 列表项按钮，用以触发事件 -->
                                            <Button
                                                Grid.Column="0"
                                                Grid.ColumnSpan="2"
                                                Style="{StaticResource JamReadyExplorerItemButtonStyle}"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Margin="2, 2, 100, 2"
                                                Command="{Binding DataContext.ExplorerItemLeftClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}">
    
                                                <!-- 拖拽事件 -->
                                                <b:Interaction.Triggers>
                                    
                                                    <!-- 拖拽开始事件 -->
                                                    <b:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                                        <b:InvokeCommandAction 
                                                            Command="{Binding DataContext.ExplorerItemDragStartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"/>
                                                    </b:EventTrigger>
                                    
                                                    <!-- 拖拽结束事件 -->
                                                    <b:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                                        <b:InvokeCommandAction 
                                                            Command="{Binding DataContext.ExplorerItemDragEndCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"/>
                                                    </b:EventTrigger>
                
                                                    <!-- 拖拽移动事件 -->
                                                    <b:EventTrigger EventName="PreviewMouseMove">
                                                        <b:InvokeCommandAction 
                                                            Command="{Binding DataContext.ExplorerItemDragMoveCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                            CommandParameter="{Binding}"/>
                                                    </b:EventTrigger>
                                    
                                                </b:Interaction.Triggers>

                                                <!-- 列表项右键 -->
                                                <Button.InputBindings>
                                                    <MouseBinding Gesture="RightClick" 
                                                                  Command="{Binding DataContext.ExplorerItemRightClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                  CommandParameter="{Binding}"/>
                                                </Button.InputBindings>
                                            </Button>
                                        
                                        <Grid Grid.Column="0">

                                            <!-- 列表项图标 -->
                                            <Image
                                                Source="{Binding IconPath}"
                                                IsHitTestVisible="False"/>
                                
                                            <!-- 列表项下角标图标 -->
                                            <Image
                                                Width="24" Height="24"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Margin="0, 0, 12, 17"
                                                Source="{Binding SubscriptIconPath}"
                                                IsHitTestVisible="False"/>
                                            
                                        </Grid>
                    
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            
                                            <!-- 列表项显示文本 -->
                                            <TextBlock
                                                Text="{Binding ItemName}"
                                                FontSize="{Binding DataContext.ExplorerItemFontSize, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                Foreground="{StaticResource ForegroundColor}"
                                                TextAlignment="Center"
                                                TextWrapping="WrapWithOverflow"
                                                HorizontalAlignment="Stretch" 
                                                VerticalAlignment="Center"
                                                Margin="8, 0, 0, 0"
                                                IsHitTestVisible="False"/>
                                            
                                        </StackPanel>
                                        
                                    </Grid>
                                    
                                </DataTemplate>
                                
                            </ItemsControl.ItemTemplate>
                
                        </ItemsControl>
                        
                    </ScrollViewer>
                    
                </Grid>
                
            </Grid>
            
        </Grid>
    
</Window>
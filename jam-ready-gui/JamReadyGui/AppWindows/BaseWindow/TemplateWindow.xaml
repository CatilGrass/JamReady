<Window x:Class="JamReadyGui.AppWindows.BaseWindow.TemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="BaseWindow" 
        Background="Transparent" ResizeMode="CanResize"
        Height="450" Width="800" MinHeight="250" MinWidth="500"
        WindowChrome.WindowChrome="{DynamicResource WindowChromeKey}">
    
    <Window.Resources>
        <WindowChrome x:Key="WindowChromeKey">
            <WindowChrome.ResizeBorderThickness>
                <Thickness> 5 </Thickness>
            </WindowChrome.ResizeBorderThickness>
            <WindowChrome.CaptionHeight> 0 </WindowChrome.CaptionHeight>
            <WindowChrome.UseAeroCaptionButtons> false </WindowChrome.UseAeroCaptionButtons>
            </WindowChrome>
    </Window.Resources>
    
    <Grid Background="{StaticResource AppBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Grid Grid.Row="0" Background="{StaticResource AppMainColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧工具栏 -->
            <StackPanel Grid.Column="0">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel 
                        Grid.Column="0"
                        Orientation="Horizontal" 
                        VerticalAlignment="Stretch">
                        <Button 
                            Style="{StaticResource JrButtonStyleTitleBar}"
                            Click="MaximizeButton"
                            Width="47" Height="35">
                            <Image Source="/AppResources/Assets/Icons/menu.png"
                                   Width="20"
                                   IsHitTestVisible="False"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
            
            <!-- 标题显示 -->
            <StackPanel Grid.Column="1" MouseDown="Title_OnMouseDown">
                <Label
                    Content="App Window Title"
                    Foreground="{StaticResource WidgetForegroundColor}"
                    FontSize="15"
                    Margin="0, 5, 0, 0"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Bottom"/>
            </StackPanel>
            
            <!-- 右侧工具栏 -->
            <StackPanel Grid.Column="2" VerticalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="141"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel
                        Grid.Column="1"
                        Orientation="Horizontal" 
                        VerticalAlignment="Stretch">
                        
                        <Button 
                            Style="{StaticResource JrButtonStyleTitleBar}"
                            Click="MinimizeButton"
                            Width="47" Height="35">
                            <Image Source="/AppResources/Assets/Icons/minimize.png"
                                   Width="20"
                                   IsHitTestVisible="False"/>
                        </Button>
                        <Button 
                            Style="{StaticResource JrButtonStyleTitleBar}"
                            Click="MaximizeButton"
                            Width="47" Height="35">
                            <Image Source="/AppResources/Assets/Icons/open_in_full.png"
                                   Width="20"
                                   IsHitTestVisible="False"/>
                        </Button>
                        <Button 
                            Style="{StaticResource JrButtonStyleTitleBar}"
                            Click="CloseButton"
                            Width="47" Height="35">
                            <Image Source="/AppResources/Assets/Icons/close.png"
                                   Width="20"
                                   IsHitTestVisible="False"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
        <Canvas Grid.Row="1">
        </Canvas>
    </Grid>
</Window>
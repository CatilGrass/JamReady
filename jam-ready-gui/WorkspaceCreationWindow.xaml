<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="640"
        Height="480">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="0.5*" />
      <ColumnDefinition Width="0.5*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="25" />
      <RowDefinition Height="*" />
      <RowDefinition Height="70" />
    </Grid.RowDefinitions>
    <Button x:Name="SetupClientButton"
            Content="CLIENT"
            Margin="8,8,4,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            FontSize="24"
            Grid.Column="0"
            Grid.Row="2" />
    <Button x:Name="SetupServerButton"
            Content="SERVER"
            Margin="4,8,8,8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            FontSize="24"
            Grid.Column="1"
            Grid.Row="2" />
    <Image Width="256"
           Height="256"
           Margin="0,0,0,0"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Top"
           RenderTransformOrigin="Infinity,NaN"
           Grid.Column="0"
           Grid.Row="1" />
  </Grid>
</Window>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:bh="clr-namespace:JamReadyGui.AppWindows.StyleBehaviours">
    
    <!-- 模板：主页面的窗口的布局 -->
    <ControlTemplate x:Key="ExplorerWindowTemplate"
                     TargetType="{x:Type Window}">
        <Grid Background="{StaticResource WindowBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/> <!-- 标题区 -->
            <RowDefinition Height="2"/> <!-- 分割线 -->
            <RowDefinition Height="*"/> <!-- 内容区 -->
        </Grid.RowDefinitions>
        
            <!-- 纵向0：标题区 -->
            <Grid Grid.Row="0" Background="{StaticResource AppMainColor}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
            
                <!-- 横向0：左侧工具栏 -->
                <StackPanel Grid.Column="0">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel 
                            Grid.Column="0"
                            Orientation="Horizontal" 
                            VerticalAlignment="Stretch">
                        
                            <!-- 菜单栏按钮 -->
                            <Button 
                                Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                Width="47" Height="48">
                                <Image Source="/AppResources/Assets/Icons/menu.png"
                                       Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                       Width="20"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            
                <!-- 横向1：标题文字、窗口拖拽区域 -->
                <StackPanel 
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Background="{StaticResource AppMainColor}"
                    bh:TemplateWindowBehaviour.Drag="True">
                    
                    <!-- 标题文字 -->
                    <Label
                        Content="App Title"
                        Foreground="{StaticResource WhiteForegroundColor}"
                        FontSize="15"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"/>
                    
                    <!-- 副标题文字 -->
                    <Label
                        Content="App Sub Title"
                        Foreground="{StaticResource AppMainColorLight}"
                        FontSize="12"
                        FontWeight="Thin"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"/>
                </StackPanel>
            
                <!-- 横向2：标题文字、窗口拖拽区域 -->
                <StackPanel Grid.Column="2" VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="141"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel
                            Grid.Column="1"
                            Orientation="Horizontal" 
                            VerticalAlignment="Stretch">
                        
                            <!-- 最小化按钮 -->
                            <Button 
                                bh:TemplateWindowBehaviour.Minimize="True"
                                Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                Width="47" Height="48">
                                <Image Source="/AppResources/Assets/Icons/minimize.png"
                                       Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                       Width="20"/>
                            </Button>
                        
                            <!-- 切换最大化、窗口化按钮 -->
                            <Button 
                                bh:TemplateWindowBehaviour.MaximizeRestore="True"
                                Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                Width="47" Height="48">
                                <Image Source="/AppResources/Assets/Icons/open_in_full.png"
                                       Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                       Width="20"/>
                            </Button>
                        
                            <!-- 关闭窗口按钮 -->
                            <Button 
                                bh:TemplateWindowBehaviour.Close="True"
                                Style="{StaticResource JamReadyButtonStyleTitleBar}"
                                Width="47" Height="48">
                                <Image Source="/AppResources/Assets/Icons/close.png"
                                       Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                       Width="20"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
            
            <!-- 纵向1：分割线 -->
            <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{StaticResource AppMainColorDark}"/>
            
            <!-- 纵向2：内容区 -->
            <Grid Grid.Row="2">
                <ContentPresenter/>
            </Grid>
        </Grid>
    </ControlTemplate>
    
    <!-- 样式：主页面的窗口样式 -->
    <Style x:Key="ExplorerWindowStyle" TargetType="Window">
        <Style.Resources>
            
            <!-- 窗口框架控制 -->
            <WindowChrome x:Key="WindowChrome">
                <WindowChrome.ResizeBorderThickness>
                    <Thickness> 10 </Thickness>
                </WindowChrome.ResizeBorderThickness>
                <WindowChrome.CaptionHeight> 0 </WindowChrome.CaptionHeight>
                <WindowChrome.UseAeroCaptionButtons> false </WindowChrome.UseAeroCaptionButtons>
                <WindowChrome.CornerRadius> 12 </WindowChrome.CornerRadius>
                <WindowChrome.GlassFrameThickness> 0 </WindowChrome.GlassFrameThickness>
            </WindowChrome>
        </Style.Resources>
        
        <!-- 其他窗口样式 -->
        <Setter Property="MinHeight" Value="250"/>
        <Setter Property="MinWidth" Value="500"/>
        <Setter Property="ResizeMode" Value="CanResize"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template" Value="{StaticResource ExplorerWindowTemplate}"/>
        <Setter Property="WindowChrome.WindowChrome" Value="{StaticResource WindowChrome}"/>
    </Style>
    

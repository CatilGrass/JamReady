<Window x:Class="JamReadyGui.AppWindows.AppExplorer.Explorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        Width="800"
        Height="450"
        Style="{StaticResource ExplorerWindowStyle}"
        Title="MainWindow"
        mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/> <!-- 内容区 -->
            <RowDefinition Height="2"/> <!-- 分割线 -->
            <RowDefinition Height="35"/> <!-- 底部工具栏、导航栏 -->
        </Grid.RowDefinitions>
        
        <!-- 纵向0：内容区 -->
        <ScrollViewer
            Grid.Row="0"
            VerticalScrollBarVisibility="Hidden"
            HorizontalScrollBarVisibility="Disabled">
            
            <ScrollViewer.InputBindings>
                
                <!-- 滚动区右键事件，用于呼出 PathMenu -->
                <MouseBinding Gesture="RightClick" 
                              Command="{Binding DataContext.ExplorerPathRightClickCommand, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                              CommandParameter="{Binding}"/>
            </ScrollViewer.InputBindings>
            
            <!-- 浏览器列表布局 -->
            <ItemsControl 
                Name="ExplorerItemsControl"
                ScrollViewer.CanContentScroll="True"
                ItemsSource="{Binding ExplorerItems}" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">
        
                <!-- 列表项容器模板 -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel
                            Orientation="Horizontal" 
                            IsItemsHost="True"
                            HorizontalAlignment="Center"
                            SizeChanged="ExplorerWrapPanel_OnSizeChanged">
                            
                            <!-- 动画 -->
                            <b:Interaction.Behaviors>
                                <b:FluidMoveBehavior AppliesTo="Self" Duration="0:0:0.3">
                                    <b:FluidMoveBehavior.EaseX>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </b:FluidMoveBehavior.EaseX>
                                    <b:FluidMoveBehavior.EaseY>
                                        <BackEase EasingMode="EaseOut"/>
                                    </b:FluidMoveBehavior.EaseY>
                                </b:FluidMoveBehavior>
                                <b:FluidMoveBehavior AppliesTo="Children" Duration="0:0:0.35">
                                    <b:FluidMoveBehavior.EaseX>
                                        <CircleEase EasingMode="EaseOut"/>
                                    </b:FluidMoveBehavior.EaseX>
                                    <b:FluidMoveBehavior.EaseY>
                                        <CircleEase EasingMode="EaseOut"/>
                                    </b:FluidMoveBehavior.EaseY>
                                </b:FluidMoveBehavior>
                            </b:Interaction.Behaviors>
                        </WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
        
                <!-- 列表项容器样式 -->
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <EventSetter Event="Drop" Handler="Item_OnDrop"/>
                        <Setter Property="AllowDrop" Value="True"/>
                        <Setter Property="Width" Value="{Binding DataContext.ExplorerItemSize, RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                        <Setter Property="Height" Value="{Binding DataContext.ExplorerItemSize, RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
        
                <!-- 列表项模板 -->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            
                            <!-- 列表项按钮，用以触发事件 -->
                            <Button 
                                Style="{StaticResource JamReadyExplorerItemButtonStyle}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Margin="12"
                                Command="{Binding DataContext.ExplorerItemLeftClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}">
    
                                <!-- 拖拽事件 -->
                                <b:Interaction.Triggers>
                                    
                                    <!-- 拖拽开始事件 -->
                                    <b:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                        <b:InvokeCommandAction 
                                            Command="{Binding DataContext.ExplorerItemDragStartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"/>
                                    </b:EventTrigger>
                                    
                                    <!-- 拖拽结束事件 -->
                                    <b:EventTrigger EventName="PreviewMouseLeftButtonUp">
                                        <b:InvokeCommandAction 
                                            Command="{Binding DataContext.ExplorerItemDragEndCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"/>
                                    </b:EventTrigger>
                
                                    <!-- 拖拽移动事件 -->
                                    <b:EventTrigger EventName="PreviewMouseMove">
                                        <b:InvokeCommandAction 
                                            Command="{Binding DataContext.ExplorerItemDragMoveCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"/>
                                    </b:EventTrigger>
                                    
                                </b:Interaction.Triggers>
                                    
                                <!-- 列表项右键 -->
                                <Button.InputBindings>
                                    <MouseBinding Gesture="RightClick" 
                                                  Command="{Binding DataContext.ExplorerItemRightClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                  CommandParameter="{Binding}"/>
                                </Button.InputBindings>
                        
                                <!-- 列表项图标 -->
                                <Image
                                    Style="{StaticResource JamReadyExplorerItemIconStyleAnimation}"
                                    Source="{Binding IconPath}"
                                    IsHitTestVisible="False"/>
                            </Button>
                    
                            <!-- 列表项显示文本 -->
                            <TextBlock
                                Text="{Binding ItemName}"
                                FontSize="{Binding DataContext.ExplorerItemFontSize, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                Foreground="{StaticResource MainForegroundColor}"
                                TextAlignment="Center"
                                TextWrapping="Wrap"
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Bottom"
                                IsHitTestVisible="False"/>
                                
                            <!-- 列表项下角标图标 -->
                            <Image
                                Width="24" Height="24"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0, 0, 12, 17"
                                Source="{Binding SubscriptIconPath}"
                                IsHitTestVisible="False"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                
            </ItemsControl>
        </ScrollViewer>
        
        <!-- 纵向1：分割线 -->
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{StaticResource AppMainColorDark}"/>
        
        <!-- 纵向2：导航栏 -->
        <Grid 
            Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
            Background="{StaticResource AppMainColor}">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/> <!-- 左侧工具 -->
                <ColumnDefinition Width="*"/> <!-- 地址栏 -->
                <ColumnDefinition Width="380"/> <!-- 搜索栏、右侧工具 -->
            </Grid.ColumnDefinitions>
            
            <!-- 横向0：左侧工具 -->
            <Grid Grid.Column="0">
                
                <!-- 回到跳转前的地址 -->
                <Button 
                    Style="{StaticResource JamReadyButtonStyleTitleBar}" Width="47" Height="35">
                    <Image Source="/AppResources/Assets/Icons/arrow_back.png" Style="{StaticResource JamReadyButtonIconStyleAnimation}" Width="20"/>
                </Button>
            </Grid>
            
            <!-- 横向1：地址栏 -->
            <Grid Grid.Column="1">
                
                <!-- 地址输入框 -->
                <TextBox 
                    Name="PathBox" Text=""
                    Background="{StaticResource AppMainColorDark}" BorderBrush="Transparent" BorderThickness="0"
                    FontSize="14" FontWeight="Thin" Foreground="{StaticResource WhiteForegroundColor}"
                    CaretBrush="{StaticResource AccentColor}" SelectionBrush="{StaticResource AccentColor}"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Padding="8, 0, 8, 0"
                    PreviewKeyDown="PathBox_OnPreviewKeyDown">
                </TextBox>
            </Grid>
            
            <!-- 横向2：搜索栏、右侧工具 -->
            <Grid Grid.Column="2">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="235"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 搜索栏 -->
                    <Grid
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        
                        <!-- 搜索输入框 -->
                        <TextBox 
                            Name="SearchBox" Text=""
                            Background="Transparent" BorderBrush="Transparent" BorderThickness="0"
                            FontSize="14" FontWeight="Thin" Foreground="{StaticResource WhiteForegroundColor}"
                            CaretBrush="{StaticResource AccentColor}" SelectionBrush="{StaticResource AccentColor}"
                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"
                            Padding="8, 0, 8, 0" Margin="5, 0, 4, 0"
                            PreviewKeyDown="SearchBox_OnPreviewKeyDown">
                        </TextBox>
                        
                    </Grid>
                    
                    <!-- 右侧工具 -->
                    <StackPanel 
                        Grid.Column="1"
                        Orientation="Horizontal" 
                        VerticalAlignment="Stretch">
                        
                        <!-- 搜索按钮 -->
                        <Button 
                            Style="{StaticResource JamReadyButtonStyleTitleBar}"
                            Width="47" Height="35">
                            <Image Source="/AppResources/Assets/Icons/search.png"
                                   Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                   Width="20"/>
                        </Button>
                        
                        <!-- 放大视图按钮 -->
                        <Button 
                            Style="{StaticResource JamReadyButtonStyleTitleBar}"
                            Width="47" Height="35"
                            Click="Explorer_Zoom_In">
                            <Image Source="/AppResources/Assets/Icons/zoom_in.png"
                                   Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                   Width="20"/>
                        </Button>
                        
                        <!-- 缩小视图按钮 -->
                        <Button 
                            Style="{StaticResource JamReadyButtonStyleTitleBar}"
                            Width="47" Height="35"
                            Click="Explorer_Zoom_Out">
                            <Image Source="/AppResources/Assets/Icons/zoom_out.png"
                                   Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                   Width="20"/>
                        </Button>
                        
                        <!-- 刷新列表按钮 -->
                        <Button 
                            Style="{StaticResource JamReadyButtonStyleTitleBar}"
                            Width="47" Height="35"
                            Click="Explorer_Refresh">
                            <Image Source="/AppResources/Assets/Icons/refresh.png"
                                   Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                   Width="20"/>
                        </Button>
                        
                        <!-- 标记位置按钮 -->
                        <Button 
                            Style="{StaticResource JamReadyButtonStyleTitleBar}"
                            Width="47" Height="35">
                            <Image Source="/AppResources/Assets/Icons/pin.png"
                                   Style="{StaticResource JamReadyButtonIconStyleAnimation}"
                                   Width="20"/>
                        </Button>
                        
                    </StackPanel>
                    
                </Grid>
                
            </Grid>
            
        </Grid>
        
    </Grid>
    
</Window>